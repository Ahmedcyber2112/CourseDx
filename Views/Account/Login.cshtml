@model CourseDx.Models.Login
@{
    ViewData["Title"] = "Login";
    ViewData["header"] = false;
    ViewData["ReturnUrl"] = "/admin";
    ViewData["Developer"] = "CourseDx Developers ";
    ViewData["FormValidation"] = true;
}

<!-- Background elements -->
<div class="fixed top-0 left-0 w-full h-full opacity-20 -z-10 pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-yellow-400 rounded-full filter blur-3xl animate-pulse-slow opacity-40"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500 rounded-full filter blur-3xl opacity-50 animate-pulse-slow delay-1000"></div>
</div>

<!-- Main Content -->
<main class="pt-20 min-h-screen flex items-center justify-center p-4 sm:p-6 md:p-12 overflow-hidden relative bg-white dark:bg-gray-900">
    <div class="w-full max-w-md bg-gray-50 dark:bg-gray-800/40 backdrop-blur-sm border border-yellow-500/30 dark:border-yellow-500/20 rounded-xl shadow-xl p-6 sm:p-8 md:p-10 relative z-10">
        <div class="absolute -inset-2 bg-yellow-500/10 dark:bg-yellow-500/10 rounded-xl filter blur-xl -z-10"></div>

        <div class="text-center mb-8">
            <h1 class="font-awesome tracking-wide text-gray-900 dark:text-gray-100 text-2xl md:text-3xl font-bold">
                Welcome Back
            </h1>
            <p class="mt-2 text-gray-700 dark:text-gray-400">Please sign in to your account</p>

            <!-- Animated underline -->
            <div class="relative mt-4 mx-auto">
                <div class="h-1 bg-gradient-to-r from-yellow-400 to-yellow-600 transition-all duration-700 ease-out w-24 mx-auto"></div>
            </div>
        </div>
        <!-- Validation Summary -->
        <div asp-validation-summary="All"
             class="mb-6 rounded-lg border border-red-500/30 bg-red-900/30 p-4 text-sm text-red-300 hidden"
             id="validationSummary">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium">Please fix the following errors:</h3>
                    <div class="mt-2 text-sm">
                        <ul class="list-disc pl-5 space-y-1"></ul>
                    </div>
                </div>
            </div>
        </div>

        <form method="post"
              class="space-y-6"
              id="loginForm"
              asp-controller="Account"
              asp-action="Login"
              novalidate>

            <!-- Email Field -->
            <div>
                <label for="UserName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                    Email Address
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                        </svg>
                    </div>
                    <input class="block w-full pl-10 pr-3 py-3 bg-white dark:bg-gray-700/50 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 text-base text-gray-900 dark:text-gray-200 transition-all duration-300"
                           id="UserName"
                           name="UserName"
                           type="text"
                           placeholder="Username"
                           asp-for="UserName"
                           autocomplete="username"
                           required />
                </div>
                <span asp-validation-for="UserName" class="mt-2 text-sm text-red-500 dark:text-red-400"></span>
            </div>

            <!-- Password Field -->
            <div>
                <label for="Password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                    Password
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <input class="block w-full pl-10 pr-3 py-3 bg-white dark:bg-gray-700/50 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 text-base text-gray-900 dark:text-gray-200 transition-all duration-300"
                           id="Password"
                           name="Password"
                           type="password"
                           placeholder="••••••••"
                           asp-for="Password"
                           autocomplete="current-password"
                           required />
                </div>
                <span class="password-field-error mt-2 text-sm text-red-500 dark:text-red-400 hidden"></span>
            </div>

            <!-- Submit Button -->
            <div>
                <button class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-lg text-base font-semibold text-gray-900 bg-gradient-to-r from-yellow-400 to-yellow-600 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500"
                        type="submit">
                    Sign in
                </button>
            </div>
        </form>

        <div class="mt-6 text-center">
            <p class="text-gray-600 dark:text-gray-400">
                Don't have an account?
                <a asp-controller="Account" asp-action="Signup" class="font-medium text-yellow-600 dark:text-yellow-500 hover:text-yellow-500 dark:hover:text-yellow-400 transition-colors duration-300">
                    Sign up
                </a>
            </p>
        </div>
    </div>
</main>
