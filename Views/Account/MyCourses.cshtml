@{
    ViewData["Title"] = "My Courses";
    ViewData["Developer"] = "CourseDx Developers";
}

<!-- Main Content -->
<main class="mt-12 min-h-screen flex flex-col overflow-hidden relative bg-gray-50 dark:bg-gray-900 pb-16">
    <!-- Background elements -->
    <div class="fixed top-0 left-0 w-full h-full opacity-20 z-10 pointer-events-none">
        <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-yellow-400 rounded-full filter blur-3xl animate-pulse-slow opacity-40"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500 rounded-full filter blur-3xl opacity-50 animate-pulse-slow delay-1000"></div>
    </div>

    <!-- Hero Section -->
    <section class="w-full flex items-center justify-center p-6 md:p-12 relative z-10">
        <div class="max-w-6xl w-full">
            <div class="flex flex-col items-center justify-center text-center">
                <h1 class="font-awesome tracking-wide text-gray-900 dark:text-gray-100 text-4xl md:text-5xl lg:text-6xl font-bold leading-tight inline-block mb-6">
                    My <span class="inline-block px-1 text-gray-700 dark:text-yellow-400">Courses</span>
                </h1>

                <div class="text-center">
                    <a asp-controller="CourseDescovery" asp-action="Index" class="text-gray-700 dark:text-gray-400 hover:text-yellow-500 dark:hover:text-yellow-400 transition-colors duration-300 font-medium text-lg flex items-center justify-center group">
                        Browse More Courses
                        <i class="fas fa-arrow-right h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Courses Section -->
    <section class="w-full flex items-center justify-center p-6 md:p-12 relative z-10 mt-8">
        <div class="max-w-6xl w-full">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Course 1 -->
                <div class="flex flex-col justify-between bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-yellow-500/20 rounded-xl overflow-hidden transition-all duration-300 course-card">
                    <div class="relative">
                        <img srcset="/img/400w/c (1)-400.webp 400w,
                                     /img/800w/c (1)-800.webp 800w,
                                     /img/1200w/c (1)-1200.webp 1200w"
                             sizes="(max-width: 600px) 400px,
                                (max-width: 1024px) 800px,
                                1200px"
                             src="/img/c (1).webp"
                             alt="Advanced Web Development"
                             loading="lazy"
                             class="w-full h-48 object-cover transition-transform duration-300" />
                    </div>
                    <div class="p-6">
                        <div class="flex justify-between items-start mb-3">
                            <a href="#" class="text-xl font-bold text-gray-900 dark:text-gray-100 hover:text-yellow-600 dark:hover:text-yellow-400 transition-colors duration-300">
                                Advanced Web Development
                            </a>
                            <div class="flex items-center bg-yellow-500/10 px-2 py-1 rounded">
                                <i class="fas fa-star text-yellow-500 mr-1"></i>
                                <span class="text-sm font-bold text-yellow-600 dark:text-yellow-500">4.9</span>
                            </div>
                        </div>
                        <p class="text-gray-700 dark:text-gray-400 mb-4 line-clamp-2">
                            Master modern web technologies including React, Node.js, and cloud deployment strategies.
                            Build scalable applications with industry-standard tools and methodologies.
                        </p>
                        <div class="flex justify-between items-center mb-4">
                            <div class="flex items-center">
                                <img src="/img/m1.jpg"
                                     alt="Instructor"
                                     class="w-8 h-8 rounded-full mr-2"
                                     loading="lazy" />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Alex Johnson</span>
                            </div>
                            <span class="text-gray-600 dark:text-gray-400 text-sm">12 Weeks</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <a asp-controller="Home" asp-action="Player" class="bg-gradient-to-r from-yellow-400 to-yellow-600 text-gray-900 px-4 py-2 rounded-lg font-medium hover:opacity-90 transition-opacity">
                                Continue Learning
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Course 2 -->
                <div class="flex flex-col justify-between bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-yellow-500/20 rounded-xl overflow-hidden transition-all duration-300 course-card">
                    <div class="relative">
                        <img srcset="/img/400w/c (2)-400.webp 400w,
                                     /img/800w/c (2)-800.webp 800w,
                                     /img/1200w/c (2)-1200.webp 1200w"
                             sizes="(max-width: 600px) 400px,
                                (max-width: 1024px) 800px,
                                1200px"
                             src="/img/c (2).webp"
                             alt="Data Science Fundamentals"
                             class="w-full h-48 object-cover transition-transform duration-300"
                             loading="lazy" />
                    </div>
                    <div class="p-6">
                        <div class="flex justify-between items-start mb-3">
                            <a href="#" class="text-xl font-bold text-gray-900 dark:text-gray-100 hover:text-yellow-600 dark:hover:text-yellow-400 transition-colors duration-300">
                                Data Science Fundamentals
                            </a>
                            <div class="flex items-center bg-yellow-500/10 px-2 py-1 rounded">
                                <i class="fas fa-star text-yellow-500 mr-1"></i>
                                <span class="text-sm font-bold text-yellow-600 dark:text-yellow-500">4.8</span>
                            </div>
                        </div>
                        <p class="text-gray-700 dark:text-gray-400 mb-4 line-clamp-2">
                            Learn Python, machine learning, and data visualization to make data-driven decisions.
                            Practical projects and real-world datasets for hands-on experience.
                        </p>
                        <div class="flex justify-between items-center mb-4">
                            <div class="flex items-center">
                                <img src="/img/f1.jpg"
                                     alt="Instructor"
                                     class="w-8 h-8 rounded-full mr-2"
                                     loading="lazy" />
                                <span class="text-sm text-gray-700 dark:text-gray-400">Sarah Williams</span>
                            </div>
                            <span class="text-gray-600 dark:text-gray-400 text-sm">10 Weeks</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <a asp-controller="Home" asp-action="Player" class="bg-gradient-to-r from-yellow-400 to-yellow-600 text-gray-900 px-4 py-2 rounded-lg font-medium hover:opacity-90 transition-opacity">
                                Continue Learning
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Course 3 -->
                <div class="flex flex-col justify-between bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-yellow-500/20 rounded-xl overflow-hidden transition-all duration-300 course-card">
                    <div class="relative">
                        <img srcset="/img/400w/c (3)-400.webp 400w,
                                     /img/800w/c (3)-800.webp 800w,
                                     /img/1200w/c (3)-1200.webp 1200w"
                             sizes="(max-width: 600px) 400px,
                                (max-width: 1024px) 800px,
                                1200px"
                             src="/img/c (3).webp"
                             alt="Cybersecurity Essentials"
                             class="w-full h-48 object-cover transition-transform duration-300"
                             loading="lazy" />
                    </div>
                    <div class="p-6">
                        <div class="flex justify-between items-start mb-3">
                            <a href="#" class="text-xl font-bold text-gray-900 dark:text-gray-100 hover:text-yellow-600 dark:hover:text-yellow-400 transition-colors duration-300">
                                Cybersecurity Essentials
                            </a>
                            <div class="flex items-center bg-yellow-500/10 px-2 py-1 rounded">
                                <i class="fas fa-star text-yellow-500 mr-1"></i>
                                <span class="text-sm font-bold text-yellow-600 dark:text-yellow-500">4.7</span>
                            </div>
                        </div>
                        <p class="text-gray-700 dark:text-gray-400 mb-4 line-clamp-2">
                            Protect digital assets with cutting-edge security practices and threat analysis techniques.
                            Hands-on labs and real-world scenarios for comprehensive learning.
                        </p>
                        <div class="flex justify-between items-center mb-4">
                            <div class="flex items-center">
                                <img src="/img/m2.jpg"
                                     alt="Instructor"
                                     class="w-8 h-8 rounded-full mr-2"
                                     loading="lazy" />
                                <span class="text-sm text-gray-700 dark:text-gray-400">Michael Chen</span>
                            </div>
                            <span class="text-gray-600 dark:text-gray-400 text-sm">8 Weeks</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <a asp-controller="Home" asp-action="Player" class="bg-gradient-to-r from-yellow-400 to-yellow-600 text-gray-900 px-4 py-2 rounded-lg font-medium hover:opacity-90 transition-opacity">
                                Continue Learning
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>