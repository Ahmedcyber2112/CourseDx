@model CourseDx.Models.ProfileViewModel
@{
    ViewData["title"] = "Profile";
    ViewData["Developer"] = "CourseDx Developers";
}

<main class="pt-20 min-h-screen bg-white dark:bg-gray-900">
    <!-- Background elements -->
    <div class="fixed top-0 left-0 w-full h-full opacity-20 z-10 pointer-events-none">
        <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-yellow-400 rounded-full filter blur-3xl animate-pulse-slow opacity-40"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500 rounded-full filter blur-3xl opacity-50 animate-pulse-slow delay-1000"></div>
    </div>

    <section class="max-w-4xl mx-auto p-6 md:p-8 relative z-20">
        <div class="bg-gray-50 dark:bg-gray-800/50 backdrop-blur-sm border border-yellow-500/30 dark:border-yellow-500/20 rounded-xl p-6 md:p-8 shadow-xl">
            <div class="text-center mb-10">
                <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100">Your <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 to-yellow-600 dark:from-yellow-300 dark:to-yellow-500">Profile</span></h1>
                <p class="text-gray-700 dark:text-gray-400 mt-2">Manage your account information and preferences</p>
            </div>

            <!-- Success/Error Messages -->
            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <strong class="font-bold">Success!</strong>
                    <span class="block sm:inline">@ViewData["SuccessMessage"]</span>
                </div>
            }
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <strong class="font-bold">Error!</strong>
                    <ul class="list-disc list-inside mt-2">
                        @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@modelError.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form id="profile-form" class="space-y-8" method="post" asp-action="Profile" asp-controller="Account">
                @Html.AntiForgeryToken()
                <!-- Profile Image (Client-side only as per request) -->
                <div class="flex flex-col items-center">
                    <div class="relative">
                        <img id="profile-image"
                             src="https://cdn.pixabay.com/photo/2024/04/09/03/04/ai-generated-8684869_1280.jpg"
                             alt="Profile"
                             class="w-32 h-32 rounded-full border-4 border-yellow-500 object-cover">
                        <button type="button" id="change-image-btn" class="absolute bottom-2 right-2 bg-yellow-500 text-gray-900 rounded-full p-2 hover:bg-yellow-600 transition-colors">
                            <i class="fas fa-camera"></i>
                        </button>
                    </div>
                    <input type="file" id="image-upload" class="hidden" accept="image/*">
                </div>

                <!-- First Name Field -->
                <div>
                    <label for="FirstName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">First Name</label>
                    <input asp-for="FirstName" id="FirstName" class="w-full bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-yellow-500 text-gray-900 dark:text-white" />
                    <span asp-validation-for="FirstName" class="text-sm text-red-500"></span>
                </div>

                <!-- Last Name Field -->
                <div>
                    <label for="LastName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Name</label>
                    <input asp-for="LastName" id="LastName" class="w-full bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-yellow-500 text-gray-900 dark:text-white" />
                    <span asp-validation-for="LastName" class="text-sm text-red-500"></span>
                </div>

                <!-- Username Field -->
                <div>
                    <label for="Username" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Username</label>
                    <input asp-for="Username" id="Username" class="w-full bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-yellow-500 text-gray-900 dark:text-white" />
                    <span asp-validation-for="Username" class="text-sm text-red-500"></span>
                </div>

                <!-- Email Field -->
                <div>
                    <label for="Email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Email Address</label>
                    <input asp-for="Email" id="Email" class="w-full bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-yellow-500 text-gray-900 dark:text-white" />
                    <span asp-validation-for="Email" class="text-sm text-red-500"></span>
                </div>

                <!-- Password Change Section -->
                <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
                    <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">Change Password</h2>

                    <div class="space-y-6">
                        <!-- Current Password -->
                        <div>
                            <label for="current-password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Current Password</label>
                            <input asp-for="CurrentPassword" id="current-password" type="password" class="w-full bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-yellow-500 text-gray-900 dark:text-white" />
                            <span asp-validation-for="CurrentPassword" class="password-field-error mt-2 text-sm text-red-500 dark:text-red-400"></span>
                        </div>

                        <!-- New Password -->
                        <div>
                            <label for="new-password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">New Password</label>
                            <input asp-for="NewPassword" id="new-password" type="password" class="w-full bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-yellow-500 text-gray-900 dark:text-white" />
                            <span asp-validation-for="NewPassword" class="password-field-error mt-2 text-sm text-red-500 dark:text-red-400"></span>
                        </div>

                        <!-- Confirm New Password -->
                        <div>
                            <label for="confirm-password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Confirm New Password</label>
                            <input asp-for="ConfirmNewPassword" id="confirm-password" type="password" class="w-full bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-yellow-500 text-gray-900 dark:text-white" />
                            <span asp-validation-for="ConfirmNewPassword" class="confirm-field-error mt-2 text-sm text-red-500 dark:text-red-400"></span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 pt-6">
                    <button type="submit"
                            class="flex-1 cursor-pointer bg-gradient-to-r from-yellow-400 to-yellow-600 text-gray-900 px-6 py-3 rounded-lg font-medium hover:opacity-90 transition-opacity">
                        Save Changes
                    </button>

                    <button type="button"
                            id="delete-account-btn"
                            class="flex-1 cursor-pointer bg-gradient-to-r from-red-500 to-red-700 text-white px-6 py-3 rounded-lg font-medium hover:opacity-90 transition-opacity">
                        Delete Account
                    </button>
                </div>
            </form>
        </div>
    </section>
</main>

<!-- Delete Account Confirmation Modal -->
<div id="delete-modal" class="fixed inset-0 flex items-center justify-center bg-black/70 backdrop-blur-sm z-50 hidden p-4">
    <div class="bg-white dark:bg-gray-800 rounded-xl max-w-md w-full p-6 border border-yellow-500/30 overflow-hidden">
        <div class="text-center">
            <div class="mx-auto bg-red-100 dark:bg-red-900/30 w-16 h-16 rounded-full flex items-center justify-center mb-4">
                <i class="fas fa-exclamation-triangle text-red-500 text-2xl"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Delete Account</h3>
            <p class="text-gray-700 dark:text-gray-300 mb-6">
                Are you sure you want to delete your account? This action cannot be undone.
            </p>
            <div class="flex flex-col sm:flex-row gap-3">
                <button id="cancel-delete"
                        class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                    Cancel
                </button>
                <form method="post" asp-action="DeleteAccount" asp-controller="Account" class="flex-1">
                    @Html.AntiForgeryToken()
                    <button type="submit" id="confirm-delete" class="w-full px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">Delete Account</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // small client-side wiring: image preview and modal toggle
    document.addEventListener('DOMContentLoaded', function() {
        const changeBtn = document.getElementById('change-image-btn');
        const upload = document.getElementById('image-upload');
        const img = document.getElementById('profile-image');
        const deleteBtn = document.getElementById('delete-account-btn');
        const modal = document.getElementById('delete-modal');
        const cancel = document.getElementById('cancel-delete');

        if (changeBtn && upload) {
            changeBtn.addEventListener('click', () => upload.click());
            upload.addEventListener('change', (e) => {
                const file = e.target.files && e.target.files[0];
                if (file) {
                    const url = URL.createObjectURL(file);
                    img.src = url;
                }
            });
        }

        if (deleteBtn && modal && cancel) {
            deleteBtn.addEventListener('click', () => modal.classList.remove('hidden'));
            cancel.addEventListener('click', () => modal.classList.add('hidden'));
        }
    });
</script>