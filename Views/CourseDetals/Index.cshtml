@model IEnumerable<CourseDx.Entity.CourseDetals>

@{
    ViewData["Title"] = "Course Details List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Controller"] = "CourseDetals";
    ViewData["Action"] = "DeleteConfirmed"; // ← Points to POST action
}

<!-- Inject config into JS -->
<script>
    window.deleteConfig = {
        controller: '@ViewData["Controller"]',
        action: '@ViewData["Action"]'
    };
</script>

<div class="admin-table-container">

    <div class="admin-header">
        <h1 class="admin-title">Course Details List</h1>
        <a asp-action="Create" class="create-new-btn">
            <i class="fas fa-plus-circle"></i> New Course
        </a>
    </div>

    <table class="table jDataTable">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>From Date</th>
                <th>To Date</th>
                <th>From Time</th>
                <th>To Time</th>
                <th>Price</th>
                <th>Online?</th>
                <th>Instructor</th>
                <th>Course</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.From_Date.ToShortDateString()</td>
                    <td>@item.To_Date.ToShortDateString()</td>
                    <td>@item.From_Time.ToShortTimeString()</td>
                    <td>@item.To_Time.ToShortTimeString()</td>
                    <td>@Math.Floor(item.Price)</td>
                    <td>@(item.IsOn_line ? "Yes" : "No")</td>
                    <td>@item.Instractor?.Name</td>
                    <td>@item.Course?.Name</td>
                    <td>
                        <div class="action-buttons">
                            <!-- Update button -->
                            <a asp-action="Edit" asp-route-id="@item.id"
                               class="action-btn update-btn px-8">
                                Edit
                            </a>

                            <!-- Delete button -->
                            <a href="#"
                               class="action-btn delete-btn px-8"
                               data-id="@item.id"
                               data-name="Title: @item.Title | Instructor: @item.Instractor?.Name | Price: @item.Price">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- Cards for mobile view -->
<div class="user-cards">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">
                <span class="card-label">Course:</span>
                <span class="card-value">@item.Title</span>
            </div>
            <div class="card-body">
                <div class="card-item">
                    <span class="card-label">Description:</span>
                    <span class="card-value">@item.Description</span>
                </div>
                <div class="card-item">
                    <span class="card-label">From Date:</span>
                    <span class="card-value">@item.From_Date.ToShortDateString()</span>
                </div>
                <div class="card-item">
                    <span class="card-label">To Date:</span>
                    <span class="card-value">@item.To_Date.ToShortDateString()</span>
                </div>
                <div class="card-item">
                    <span class="card-label">From Time:</span>
                    <span class="card-value">@item.From_Time.ToShortTimeString()</span>
                </div>
                <div class="card-item">
                    <span class="card-label">To Time:</span>
                    <span class="card-value">@item.To_Time.ToShortTimeString()</span>
                </div>
                <div class="card-item">
                    <span class="card-label">Price:</span>
                    <span class="card-value">@Math.Floor(item.Price)</span>
                </div>
                <div class="card-item">
                    <span class="card-label">Online:</span>
                    <span class="card-value">@(item.IsOn_line ? "Yes" : "No")</span>
                </div>
                <div class="card-item">
                    <span class="card-label">Instructor:</span>
                    <span class="card-value">@(item.Instractor?.Name ?? "N/A")</span>
                </div>
                <div class="card-item">
                    <span class="card-label">Course:</span>
                    <span class="card-value">@(item.Course?.Name ?? "N/A")</span>
                </div>
            </div>
            <div class="card-actions">
                <a asp-action="Edit" asp-route-id="@item.id" class="card-btn card-btn-update">Edit</a>
                <a href="#" class="card-btn delete-btn"
                   data-id="@item.id"
                   data-name="Title: @item.Title | Instructor: @(item.Instractor?.Name ?? "N/A") | Price: @item.Price">
                    Delete
                </a>
            </div>
        </div>
    }
</div>
<!-- Include the modal -->
@Html.Partial("DeleteComfirm")