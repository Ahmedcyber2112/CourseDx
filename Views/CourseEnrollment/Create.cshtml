@model CourseDx.Models.CourseEnrollment.Create

@{
    ViewData["Title"] = "CREATE COURSE ENROLLMENT";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["FormValidation"] = true;
}

<div class="max-w-3xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200 mb-8">
        <div class="border-b border-gray-200 bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-5">
            <h3 class="text-xl font-semibold text-gray-800 text-center">
                Course Information
            </h3>
        </div>
        <div class="px-6 py-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="flex items-center py-2">
                    <span class="text-sm font-medium text-gray-500 w-36 pr-3">Course Name:</span>
                    <span class="text-sm text-gray-800 flex-1">@ViewBag.CourseName</span>
                </div>
                <div class="flex items-center py-2">
                    <span class="text-sm font-medium text-gray-500 w-36 pr-3">Instructor:</span>
                    <span class="text-sm text-gray-800 flex-1">@ViewBag.InstructorName</span>
                </div>
                <div class="flex items-center py-2">
                    <span class="text-sm font-medium text-gray-500 w-36 pr-3">Duration:</span>
                    <span class="text-sm text-gray-800 flex-1">@ViewBag.From - @ViewBag.To</span>
                </div>
                <div class="flex items-center py-2">
                    <span class="text-sm font-medium text-gray-500 w-36 pr-3">Price:</span>
                    <span class="text-sm text-gray-800 flex-1">@ViewBag.Price</span>
                </div>
            </div>
        </div>
    </div>
</div>

<section id="create-container" class="max-w-3xl mx-auto px-4 pb-8 sm:px-6 lg:px-8">
    <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200">

        <!-- Header -->
        <div class="border-b border-gray-200 bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-5">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div>
                    <h3 class="text-xl font-semibold text-gray-800">Enroll Student</h3>
                    <p class="text-sm text-gray-600 mt-1">Assign a student to a course using the form below.</p>
                </div>
                <a asp-action="Search"
                   class="inline-flex items-center justify-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-xs hover:bg-gray-50 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-x">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M18 6l-12 12" />
                        <path d="M6 6l12 12" />
                    </svg>
                    Cancel
                </a>
            </div>
        </div>

        <!-- Form Section -->
        <form asp-action="Create" method="post" class="px-6 py-6">
            <input type="hidden" id="CourseDetalsId" name="CourseDetalsId" value="@ViewBag.course_details_id" />

            <!-- Student Dropdown -->
            <div>
                <label asp-for="StudentId" class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-users">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0" />
                        <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                        <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                        <path d="M21 21v-2a4 4 0 0 0 -3 -3.85" />
                    </svg>
                    Select Student
                </label>
                <select asp-for="StudentId"
                        asp-items="@(ViewBag.Students as SelectList)"
                        class="w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm shadow-xs focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200 transition">
                    <option value="">-- Select Student --</option>
                </select>
                <span asp-validation-for="StudentId" class="mt-1 text-xs text-red-600 block"></span>
            </div>

            <!-- Submit Button -->
            <div class="mt-8 flex justify-end">
                <button type="submit"
                        class="rounded-lg bg-gradient-to-r from-blue-600 to-indigo-700 px-6 py-2.5 text-sm font-medium text-white shadow-md hover:from-blue-700 hover:to-indigo-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200">
                    Enroll Student
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}