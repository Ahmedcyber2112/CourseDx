@model CourseDx.Entity.CourseEnrollment

@{
    ViewData["Title"] = "Delete Course Enrollment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Confirmation</h2>

<h4>Are you sure you want to delete this enrollment?</h4>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Student</dt>
            <dd class="col-sm-9">@Model.Student?.Full_Name</dd>

            <dt class="col-sm-3">Instructor</dt>

            <dt class="col-sm-3">Course</dt>
            <dd class="col-sm-9">@Model.CourseDetals?.Title</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>