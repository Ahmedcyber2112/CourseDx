@model IEnumerable<CourseDx.Entity.CourseEnrollment>

@{
    ViewData["Title"] = "Course Enrollment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Controller"] = "CourseEnrollment";
    ViewData["Action"] = "DeleteConfirmed"; // ← Points to POST action
}

<script>
    window.deleteConfig = {
        controller: '@ViewData["Controller"]',
        action: '@ViewData["Action"]'
    };
</script>

<div class="admin-table-container">

    <div class="admin-header">
        <h1 class="admin-title">Course Enrollment</h1>
    </div>

    <table class="table jDataTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Student.Full_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseDetals.Course.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseDetals.Instractor.Name)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.Full_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseDetals.Course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseDetals.Instractor.Name)
                    </td>
                    <td>
                        <div class="action-buttons">

                            <!-- Delete button -->
                            <a href="#"
                               class="action-btn delete-btn px-8"
                               data-id="@item.Id"
                               data-name="@item.Student.Full_Name">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- Cards for mobile view -->
<div class="user-cards">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">
                <span class="card-label">Enrollment</span>
                <span class="card-value">@item.Student.Full_Name</span>
            </div>
            <div class="card-body">
                <div class="card-item">
                    <span class="card-label">Student:</span>
                    <span class="card-value">@item.Student.Full_Name</span>
                </div>
                <div class="card-item">
                    <span class="card-label">Course:</span>
                    <span class="card-value">@item.CourseDetals.Course.Name</span>
                </div>
                <div class="card-item">
                    <span class="card-label">Instructor:</span>
                    <span class="card-value">@item.CourseDetals.Instractor.Name</span>
                </div>
            </div>
            <div class="card-actions">
                <a href="#" class="card-btn  delete-btn"
                   data-id="@item.Id"
                   data-name="@item.Student.Full_Name">
                    Delete
                </a>
            </div>
        </div>
    }
</div>
@Html.Partial("DeleteComfirm")