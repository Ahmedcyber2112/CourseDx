<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Section toggle functionality
        const toggleButtons = document.querySelectorAll('[data-toggle]');
        
        toggleButtons.forEach(button => {
            button.addEventListener('click', function() {
                const targetId = this.getAttribute('data-toggle');
                const targetSection = document.getElementById(targetId);
                const icon = this.querySelector('svg');
                
                // Toggle visibility
                targetSection.classList.toggle('hidden');
                
                // Rotate icon
                icon.classList.toggle('rotate-180');
            });
        });

        // Video switching functionality
        const videoLinks = document.querySelectorAll('a[data-video-url]');
        const videoPlayer = document.getElementById('courseVideo');
        
        videoLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const videoUrl = this.getAttribute('data-video-url');
                
                // Update video source
                videoPlayer.src = videoUrl;
                
                // Optional: Scroll to video player
                videoPlayer.scrollIntoView({ behavior: 'smooth', block: 'center' });
                
                // Optional: Add active class to clicked link
                document.querySelectorAll('a[data-video-url]').forEach(l => l.classList.remove('bg-yellow-100', 'dark:bg-yellow-900/30'));
                this.classList.add('bg-yellow-100', 'dark:bg-yellow-900/30');
            });
        });

        // Open first section by default
        const firstSection = document.getElementById('section1');
        const firstButton = document.querySelector('[data-toggle="section1"] svg');
        if (firstSection && firstButton) {
            firstSection.classList.remove('hidden');
            firstButton.classList.add('rotate-180');
        }
    });
</script>