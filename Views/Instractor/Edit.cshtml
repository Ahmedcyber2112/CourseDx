@model CourseDx.Entity.Instractor

@{
    ViewData["Title"] = "EDIT INSTRUCTOR";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["FormValidation"] = true;
}

<section id="edit-instructor-container" class="max-w-3xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200">

        <!-- Header -->
        <div class="border-b border-gray-200 bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-5">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div>
                    <h3 class="text-xl font-semibold text-gray-800">Edit Instructor</h3>
                    <p class="text-sm text-gray-600 mt-1">Update instructor details using the form below.</p>
                </div>
                <a asp-action="Index"
                   class="inline-flex items-center justify-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-xs hover:bg-gray-50 transition-colors">

                    Back to List
                </a>
            </div>
        </div>

        <!-- Form Section -->
        <form asp-action="Edit" method="post" class="px-6 py-6">
            <input type="hidden" asp-for="Id" />

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">

                <!-- Title -->
                <div>
                    <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2">

                        Title
                    </label>
                    <input asp-for="Title"
                           class="w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm shadow-xs focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200 transition" />
                    <span asp-validation-for="Title" class="mt-1 text-xs text-red-600 block"></span>
                </div>

                <!-- Name -->
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2">

                        Full Name
                    </label>
                    <input asp-for="Name"
                           class="w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm shadow-xs focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200 transition" />
                    <span asp-validation-for="Name" class="mt-1 text-xs text-red-600 block"></span>
                </div>

                <!-- Description -->
                <div class="sm:col-span-2">
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2">

                        Description
                    </label>
                    <input asp-for="Description"
                           class="w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm shadow-xs focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200 transition" />
                    <span asp-validation-for="Description" class="mt-1 text-xs text-red-600 block"></span>
                </div>

                <!-- Gender Dropdown -->
                <div class="sm:col-span-2">
                    <label asp-for="Gender" class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2">

                        Gender
                    </label>
                    <select asp-for="Gender" id="genderSelect"
                            class="w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm shadow-xs focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200 transition">
                        <option value="">-- Select Gender --</option>
                        <option value="0">Male</option>
                        <option value="1">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="mt-1 text-xs text-red-600 block"></span>
                </div>

            </div>

            <!-- Submit Button -->
            <div class="mt-8 flex justify-end">
                <button type="submit"
                        class="rounded-lg bg-gradient-to-r from-blue-600 to-indigo-700 px-6 py-2.5 text-sm font-medium text-white shadow-md hover:from-blue-700 hover:to-indigo-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('#genderSelect').select2({
                placeholder: "-- Select Gender --",
                allowClear: true,
                width: '100%',
                minimumResultsForSearch: Infinity
            });
        });
    </script>
}