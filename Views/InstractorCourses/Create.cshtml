@model CourseDx.Models.Inst_Courses_Model

@{
    ViewData["Title"] = "ASSIGN INSTRUCTOR TO COURSE";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["FormValidation"] = true;
}

<section id="create-container" class="max-w-3xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200">

        <!-- Header -->
        <div class="border-b border-gray-200 bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-5">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div>
                    <h3 class="text-xl font-semibold text-gray-800">Assign Instructor</h3>
                    <p class="text-sm text-gray-600 mt-1">Assign an instructor to a course using the form below.</p>
                </div>
                <a asp-action="Index"
                   class="inline-flex items-center justify-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-xs hover:bg-gray-50 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-x">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M18 6l-12 12" />
                        <path d="M6 6l12 12" />
                    </svg>
                    Cancel
                </a>
            </div>
        </div>

        <!-- Form Section -->
        <form asp-action="Create" method="post" class="px-6 py-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">

                <!-- Course Dropdown -->
                <div>
                    <label asp-for="CourseId" class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-book-2">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M3 19a9 9 0 0 1 9 0a9 9 0 0 1 9 0" />
                            <path d="M3 6a9 9 0 0 1 9 0a9 9 0 0 1 9 0" />
                            <path d="M3 6l0 13" />
                            <path d="M12 6l0 13" />
                            <path d="M21 6l0 13" />
                        </svg>
                        Select Course
                    </label>
                    <select asp-for="CourseId"
                            asp-items="@(ViewBag.Courses as SelectList)"
                            class="w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm shadow-xs focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200 transition">
                        <option value="">-- Select Course --</option>
                    </select>
                    <span asp-validation-for="CourseId" class="mt-1 text-xs text-red-600 block"></span>
                </div>

                <!-- Instructor Dropdown -->
                <div>
                    <label asp-for="InstructorId" class="block text-sm font-medium text-gray-700 mb-1 flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-user-check">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
                            <path d="M6 21v-2a4 4 0 0 1 4 -4h4" />
                            <path d="M15 19l2 2l4 -4" />
                        </svg>
                        Select Instructor
                    </label>
                    <select asp-for="InstructorId"
                            asp-items="@(ViewBag.Instructors as SelectList)"
                            class="w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm shadow-xs focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200 transition">
                        <option value="">-- Select Instructor --</option>
                    </select>
                    <span asp-validation-for="InstructorId" class="mt-1 text-xs text-red-600 block"></span>
                </div>

            </div>

            <!-- Submit Button -->
            <div class="mt-8 flex justify-end">
                <button type="submit"
                        class="rounded-lg bg-gradient-to-r from-blue-600 to-indigo-700 px-6 py-2.5 text-sm font-medium text-white shadow-md hover:from-blue-700 hover:to-indigo-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200">
                    Assign Instructor
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}