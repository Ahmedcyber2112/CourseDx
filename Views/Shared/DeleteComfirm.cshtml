
<div id="deleteModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-[#0009]">
    <div class="bg-white rounded-lg p-6 w-full max-w-sm dark:bg-gray-900">
        <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-2">Confirm Delete</h3>
        <p class="mb-4 text-gray-700 dark:text-gray-300">
            Are you sure you want to delete this?
        </p>

        <div class="user-name-div mb-4 text-center  p-3 bg-red-50 dark:bg-red-900/30 rounded border border-red-200 dark:border-red-800">
            <p class="text-sm text-red-800 dark:text-red-300 font-mono break-all">
                <span id="modalUserName"></span>
            </p>
        </div>

        <form id="deleteForm" method="post">
            @Html.AntiForgeryToken()
            <div class="flex justify-end gap-3">
                <button type="button" onclick="closeModal()" class="cursor-pointer px-4 py-2 text-gray-700 hover:bg-gray-100 rounded dark:text-gray-300 dark:hover:bg-gray-800">
                    Cancel
                </button>
                <button type="submit" class="px-4 py-2 bg-red-500 text-white hover:bg-red-600 rounded cursor-pointer">
                    Delete
                </button>
            </div>
        </form>
    </div>
</div>
<!-- Admin Warning Modal -->
<div id="adminWarningModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-[#0009]">
    <div class="bg-white rounded-lg p-6 w-full max-w-sm dark:bg-gray-900">
        <h3 class="text-lg font-semibold text-red-600 dark:text-red-400 mb-2">Action Not Allowed</h3>
        <p class="mb-4 text-gray-700 dark:text-gray-300">
            Admin users cannot be deleted.
        </p>
        <div class="flex justify-end">
            <button type="button" onclick="closeAdminWarningModal()"
                    class="px-4 py-2 bg-gray-500 text-white hover:bg-gray-600 rounded cursor-pointer">
                OK
            </button>
        </div>
    </div>
</div>

<script src="~/js/comfirm.js" asp-append-version="true"></script>




