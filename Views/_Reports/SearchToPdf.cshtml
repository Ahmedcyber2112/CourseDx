@model List<CourseDx.Entity.CourseDetals>

@{
    Layout = null;
}






<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>تقرير الجلسات</title>
    <style>
        body {
            font-family: "blissregular", Arial, sans-serif;
            font-size: 14px;
            color: #333;
            background: #fff;
            margin: 20px;
            padding: 0;
            direction: rtl;
            text-align: center;
        }

        h1 {
            font-size: 1.5em;
            font-weight: bold;
            margin: 10px 0 20px;
            color: #2c3e50;
            text-align: center;
        }

        .table-container {
            margin: 30px auto;
            max-width: 100%;
            overflow-x: auto;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
            background: #fff;
            table-layout: auto;
        }

        thead {
            background-color: #f8f9fa;
            color: #495057;
        }

        th, td {
            border: 1px solid #dee2e6;
            padding: 10px 12px;
            text-align: center;
            vertical-align: middle;
            white-space: normal;
            word-wrap: break-word;
        }

        th {
            font-weight: bold;
            font-size: 14px;
            background-color: #e9ecef;
            color: #444;
        }

        tbody tr {
            background-color: #ffffff;
        }

            tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            tbody tr:hover {
                background-color: #f1f1f1;
            }

        td {
            font-size: 13px;
        }

        .no-results {
            text-align: center;
            font-size: 16px;
            color: #777;
            margin: 40px;
        }

        /* Ensure rows stay together when printing */
        tr {
            page-break-inside: avoid;
            page-break-after: auto;
        }

        thead {
            display: table-header-group;
        }

        /* Print settings */
        @@media print {
            body

        {
            margin: 0;
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }

        .table-container {
            box-shadow: none;
            page-break-inside: avoid;
        }

        table {
            page-break-inside: auto;
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto;
        }

        thead {
            display: table-header-group;
        }

        }
    </style>
</head>
<body>

    <h1>تقرير الجلسات</h1>

    @if (Model != null && Model.Any())
    {
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>الدورة</th>
                        <th>العنوان</th>
                        <th>المدرب</th>
                        <th>التاريخ</th>
                        <th>الوقت</th>
                        <th>السعر</th>
                        <th>أونلاين</th>
                        <th>مدفوع</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.Course?.Name ?? "-")</td>
                            <td>@item.Title</td>
                            <td>@(item.Instractor?.Name ?? "-")</td>
                            <td>@item.From_Date.ToString("dd/MM/yyyy") - @item.To_Date.ToString("dd/MM/yyyy")</td>
                            <td>@item.From_Time.ToString("h:mm tt") - @item.To_Time.ToString("h:mm tt")</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@(item.IsOn_line ? "نعم" : "لا")</td>
                            <td>@(item.IsPaid ? "نعم" : "لا")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="no-results">لا توجد نتائج متاحة.</p>
    }

</body>
</html>